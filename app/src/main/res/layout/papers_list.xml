<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/holderview"
        android:layout_margin="5dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/year_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:padding="5dp"
            android:textSize="16dp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/pyear_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="data"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moduleC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Module Code"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/module_C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vsems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Semester"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/vsem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vfacs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="faculty"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/vfac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vexamd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="exam"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/vexam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

            </LinearLayout>



        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>